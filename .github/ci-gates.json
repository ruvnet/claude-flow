{
  "ci_gates": {
    "version": "1.0",
    "description": "CI/CD Gates Configuration for TypeScript Strict Mode Enforcement",
    "enabled": true,
    "gates": {
      "typescript_strict": {
        "enabled": true,
        "description": "Enforce TypeScript strict mode compilation with zero errors",
        "exit_on_failure": true,
        "commands": [
          "npm run typecheck",
          "tsc --noEmit --strict --noUnusedLocals --noUnusedParameters"
        ],
        "error_threshold": 0,
        "failure_message": "❌ TypeScript strict mode validation failed. All TypeScript errors must be resolved before proceeding."
      },
      "circular_dependency_check": {
        "enabled": true,
        "description": "Check for circular dependencies",
        "exit_on_failure": true,
        "commands": [
          "npm run check-deps"
        ],
        "error_threshold": 0,
        "failure_message": "❌ Circular dependency detected. Remove circular dependencies before proceeding."
      },
      "lint_quality": {
        "enabled": true,
        "description": "Code quality and lint checks",
        "exit_on_failure": true,
        "commands": [
          "npm run lint"
        ],
        "error_threshold": 0,
        "failure_message": "❌ Linting failed. Fix all lint errors before proceeding."
      },
      "security_audit": {
        "enabled": true,
        "description": "Security vulnerability audit",
        "exit_on_failure": false,
        "commands": [
          "npm audit --audit-level high"
        ],
        "error_threshold": 0,
        "failure_message": "⚠️ Security vulnerabilities detected. Review and address high-severity issues."
      },
      "build_validation": {
        "enabled": true,
        "description": "Complete build validation",
        "exit_on_failure": true,
        "commands": [
          "npm run build"
        ],
        "error_threshold": 0,
        "failure_message": "❌ Build failed. Fix build errors before proceeding."
      },
      "test_coverage": {
        "enabled": true,
        "description": "Test suite execution with coverage requirements",
        "exit_on_failure": true,
        "commands": [
          "npm test"
        ],
        "coverage_threshold": {
          "lines": 80,
          "functions": 80,
          "branches": 70,
          "statements": 80
        },
        "error_threshold": 0,
        "failure_message": "❌ Tests failed or coverage below threshold."
      }
    },
    "reporting": {
      "enabled": true,
      "formats": ["console", "github_actions", "json"],
      "output_file": "ci-gate-results.json",
      "include_metrics": true,
      "slack_webhook": "${SLACK_WEBHOOK_URL}",
      "email_notifications": {
        "enabled": false,
        "on_failure": true,
        "recipients": []
      }
    },
    "enforcement": {
      "pre_commit": true,
      "pre_push": true,
      "ci_pipeline": true,
      "deployment_gate": true
    }
  }
}