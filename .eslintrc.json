{
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "no-undef": "off",
    "no-case-declarations": "off",
    "no-constant-condition": "off",
    "no-control-regex": "off",
    "no-prototype-builtins": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    "*.d.ts",
    "*.ts",
    "src/**/*.ts",
    "examples/",
    "benchmark/",
    "tests/",
    "validation/",
    "zen-mcp-server/"
  ]
}